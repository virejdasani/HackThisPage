{
    "manifest_version": 2,

    "name": "Hack This Page",
    "description": "This extension makes any webpage editable!",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],

    "browser_action": {
        "default_icon": "assets/icon.png"
        // "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}